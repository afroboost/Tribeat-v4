# Database (PostgreSQL required in production)
# Vercel: use Vercel Postgres or external (Neon/Supabase/etc).
DATABASE_URL="postgresql://user:password@localhost:5432/tribeat?sslmode=disable"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-change-in-production"

# Feature flags (safe toggles)
# If false/missing, the feature is disabled and must fail safely.
ENABLE_LIVE="false"
ENABLE_STRIPE="false"
ENABLE_PAYSTACK="false"

# Pusher (required for live sessions)
NEXT_PUBLIC_PUSHER_KEY="placeholder-key"
NEXT_PUBLIC_PUSHER_CLUSTER="eu"
PUSHER_APP_ID="placeholder-app-id"
PUSHER_SECRET="placeholder-secret"

# Stripe (optional; routes return 503 if not configured)
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""
